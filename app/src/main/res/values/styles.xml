<resources>

    <style name="MainActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:navigationBarColor">@android:color/holo_red_dark</item>
    </style>

    <style name="ListViewTheme_Light" parent="@android:style/Widget.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:listSelector">@color/listview_item_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="CustomListView_Item_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <!--<item name="android:animateLayoutChanges">true</item>-->
        <!--TODO ^ Find a way to remove blank space (icon placeholder?)-->
    </style>

</resources>
